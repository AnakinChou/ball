Section 'Install Python'
	SetOutPath $INSTDIR\3dParty
	MessageBox MB_YESNO 'Scripting BALLView in Python requires a current Python installation. Do you want to install Python now?' IDNO endPython
	File "Runtime\3dParty\@PYTHON_INSTALLER@"
	ExecWait '"msiexec" /i "$INSTDIR\3dParty\@PYTHON_INSTALLER@"'
	Goto endPython
	endPython:
SectionEnd
