#!/usr/local/bin/bash

PS2PDF="/opt/adobe/AcroDist_2.1/bin/distill -v -thumbs on -embedall -pairs"

mkdir ../doc 2>/dev/null
mkdir ../doc/tex 2>/dev/null
cp config/docxx.sty ../doc/tex

cd ../include/BALL
/KM/comp-bio/BALL-contrib/docxx/bin/SunOS/doc++ $OPTS -t -o ../../doc/tex/BALL.tex BALL.doc
cd ../../doc/tex
latex BALL
latex BALL
dvips BALL
${PS2PDF} BALL.ps BALL.pdf
mv BALL.ps BALL.pdf ..
