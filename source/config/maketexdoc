#!/usr/local/bin/bash
# $Id: maketexdoc,v 1.5 2000/01/11 20:19:14 oliver Exp $

mkdir ../doc 2>/dev/null
mkdir ../doc/tex 2>/dev/null
cp config/docxx.sty ../doc/tex

cd ../include/BALL
/KM/comp-bio/BALL-contrib/docxx/bin/SunOS/doc++ $OPTS -t -o ../../doc/tex/BALL.tex BALL.doc
cd ../../doc/tex
latex BALL
latex BALL
dvips BALL
pdflatex BALL
pdflatex BALL
mv BALL.ps BALL.pdf ..
