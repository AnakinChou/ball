#!/bin/sh

cp ../lib/$PLATFORM/lib*.so deb-ball/opt/BALL/lib &&

cp ../lib/$PLATFORM/BALLmodule.so deb-ball/usr/lib/python2.3/site-packages &&
#cp /opt/sip-4.0rc1_gcc-3.3.3/siplib/sip.so deb-ball/usr/lib/python2.3/site-packages &&

cp ../source/APPLICATIONS/BALLVIEW/BALLView deb-ball/opt/BALL/bin &&

cp -rf ../doc/BALLView deb-ball/opt/BALL/doc &&

rm -rf deb-ball/opt/BALL/data &&
cp -r ../data deb-ball/opt/BALL &&

cp ../source/config/control deb-ball/DEBIAN &&

for i in `find deb-ball -name "CVS"`; do rm -rf $i; done &&

dpkg -b deb-ball BALLView.deb &&

rm -rf deb-ball/opt/BALL/data &&
rm -f deb-ball/opt/BALL/bin/* &&
rm -rf deb-ball/opt/BALL/lib/* &&
rm -rf deb-ball/opt/BALL/doc/*

