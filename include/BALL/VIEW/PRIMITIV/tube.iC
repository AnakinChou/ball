BALL_INLINE
Real Tube::getLength() const
	throw()
{
  return (getVertex1() - getVertex2()).getLength();
}

BALL_INLINE
Real Tube::getSquareLength() const
	throw()
{
  return (getVertex1() - getVertex2()).getSquareLength();
}


BALL_INLINE
void Tube::setRadius(Real radius)
	throw()
{
	radius_ = radius;
}

BALL_INLINE
Real Tube::getRadius() const
	throw()
{
	return radius_;
}
