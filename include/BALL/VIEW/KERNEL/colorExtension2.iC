BALL_INLINE
void ColorExtension2::setColor1(const ColorRGBA& color)
	throw()
{
  color1_ = color;
}

BALL_INLINE
void
ColorExtension2::setColor1
  (const ColorUnit& red, const ColorUnit& green,
   const ColorUnit& blue, const ColorUnit& alpha)
	throw()
{
  color1_.set(red, green, blue, alpha);
}

BALL_INLINE
ColorRGBA& ColorExtension2::getColor1()
	throw()
{
  return color1_;
}

BALL_INLINE
const ColorRGBA& ColorExtension2::getColor1() const
	throw()
{
  return color1_;
}

BALL_INLINE
void ColorExtension2::getColor1(ColorRGBA& color) const
	throw()
{
  color = color1_;
}

BALL_INLINE
void ColorExtension2::getColor1
  (ColorUnit& red, ColorUnit& green,
   ColorUnit& blue, ColorUnit& alpha) const
	throw()
{
  color1_.get(red, green, blue, alpha);
}

BALL_INLINE
void ColorExtension2::getColor1
  (ColorUnit& red, ColorUnit& green, ColorUnit& blue) const
	throw()
{
  color1_.get(red, green, blue);
}



BALL_INLINE
void ColorExtension2::setColor2(const ColorRGBA& color)
	throw()
{
  color2_ = color;
}

BALL_INLINE
void ColorExtension2::setColor2
  (const ColorUnit& red, const ColorUnit& green,
   const ColorUnit& blue, const ColorUnit& alpha)
	throw()
{
  color2_.set(red, green, blue, alpha);
}

BALL_INLINE
ColorRGBA& ColorExtension2::getColor2()
	throw()
{
  return color2_;
}

BALL_INLINE
const ColorRGBA& ColorExtension2::getColor2() const
	throw()
{
  return color2_;
}

BALL_INLINE
void ColorExtension2::getColor2(ColorRGBA& color) const
	throw()
{
  color = color2_;
}

BALL_INLINE
void ColorExtension2::getColor2
  (ColorUnit& red, ColorUnit& green,
   ColorUnit& blue, ColorUnit& alpha) const
	throw()
{
  color2_.get(red, green, blue, alpha);
}

BALL_INLINE
void ColorExtension2::getColor2
  (ColorUnit& red, ColorUnit& green, ColorUnit& blue) const
	throw()
{
  color2_.get(red, green, blue);
}

BALL_INLINE
void ColorExtension2::setColors
  (const ColorRGBA& a, const ColorRGBA& b)
	throw()
{
  color1_ = a;
  color2_ = b;
}
      
BALL_INLINE
void ColorExtension2::getColors
  (ColorRGBA& a, ColorRGBA& b) const
	throw()
{
  a = color1_;
  b = color2_;
}

