BALL_INLINE
void DisplayProperties::setValue_(int address, int value)
{
	address_array_[address] = value;
}
		
BALL_INLINE
int DisplayProperties::getValue_(int address)
{
	return address_array_[address];
}

BALL_INLINE
bool DisplayProperties::hasValue_(int address, int value)
{
	return (address_array_[address] == value);
}

BALL_INLINE
void DisplayProperties::setColorCalculator_(ColorCalculator& color_calculator)
{
	color_calculator_ = &color_calculator;
}

