BALL_INLINE
Real TwoColoredTube::getLength() const
	throw()
{
  return (getVertex1() - getVertex2()).getLength();
}

BALL_INLINE
Vector3 TwoColoredTube::getMiddleVertex()
	throw()
{
  return (getVertex1() + (getVertex2() - getVertex1()) / 2.0);
}
