BALL_INLINE
Real TwoColoredTube::getLength() const
	throw()
{
  return (getVertex1() - getVertex2()).getLength();
}

BALL_INLINE
Vector3 TwoColoredTube::getMiddleVertex()
	throw()
{
  return (getVertex1() + (getVertex2() - getVertex1()) / 2.0);
}

BALL_INLINE
void TwoColoredTube::setRadius(Real radius)
	throw()
{
	radius_ = radius;
}

BALL_INLINE
Real TwoColoredTube::getRadius() const
	throw()
{
	return radius_;
}
